<header>
  <%= render partial: 'image_navbar' %>
</header>

<div class="container-fluid">

  <%= link_to 'Upload New Masterpiece', new_image_path, class: "btn btn-primary" %>

  <div class="row">
    <% @images.each do |i| %>
      <div class="col-lg-3 col-md-3 col-sm-12 col-xs-12">
        <div class="card">
          <div class="card-body">
            <%= link_to(image_tag(i.url, class: 'img-fluid'), image_path(i.id)) %>
            <p class="card-text title"><%= i.title %></p>
          </div>
        </div>
      </div>
    <% end %>
  </div>

</div>

<%= render partial: 'image_footer' %>
